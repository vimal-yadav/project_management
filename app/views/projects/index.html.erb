<div class="row">
  <div class="col-md-12 col-lg-12 mt-3">
    <h1 class="text text-dark"><strong>Projects:</strong></h1>
    <%= link_to 'New Project', new_project_path,class:'btn btn-primary mb-3' %>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead> 
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.name %></td>
            <td>
              <%= link_to 'show', project, class:'btn btn-primary' %>
              <%= link_to 'Edit', edit_project_path(project), class:'btn btn-warning'%>
              <%= link_to 'Delete', project, method: :delete, data: {confirm:'Are you sure you want to delete this Project?'}, class:'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
